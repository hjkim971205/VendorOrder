@{
  Layout = "_Layout";
}
  <body>
    @using VendorOrder.Models;

    <h3>Glad to be doing business with you @Model["vendor"].Name!</h3>
    <h4>Your past orders</h4>

    <ol>
    @foreach (Order order in @Model["orders"])
    {
      <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Name</a></li>
    }
    </ol>

    <p><a href='/vendors/@Model["vendor"].Id/orders/new'>Make another order</a></p>
    <p><a href='/vendors'>Return to vendor list</a></p>
    <p><a href='/'>Return to Main Page</a></p>
  </body>
</html>