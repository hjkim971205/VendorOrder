@{
  Layout = "_Layout";
}
  <body>
    @using VendorOrder.Models;

    <h1>Album Catalog</h1>

    @if (@Model.Count == 0)
    {
      <h3>Nothing has been added yet!</h3>
    } 

    @foreach (Category category in Model)
    {
      <h3><a href='/categories/@category.Id'>@category.Name</a></h3>
    }

    <p><a href='/'>Back home</a></p>
  </body>
</html>